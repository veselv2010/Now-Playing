<common:CustomCheckboxBase
             xmlns:common="clr-namespace:NowPlaying.Wpf.Controls.Common"
             x:Class="NowPlaying.Wpf.Controls.Common.CustomCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="25" 
             Width="25">
    <Viewbox>
        <StackPanel MouseLeftButtonDown="StackPanel_MouseLeftButtonDown" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
            <Rectangle x:Name="BorderRectangle" 
                       Width="25" Height="25" 
                       Fill="Transparent" 
                       Stroke="#B3B3B3" 
                       Panel.ZIndex="2"/>
            
            <Rectangle x:Name="CheckedRectangle" 
                       Width="23" Height="23" 
                       Fill="Transparent"
                       Margin="0,-25,0,0"
                       Panel.ZIndex="1"/>
        </StackPanel>
    </Viewbox>
</common:CustomCheckboxBase>
