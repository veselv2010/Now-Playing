<reactiveui:ReactiveWindow
        x:Class="HelloWorldRUI.MainWindow"
        x:TypeArguments="helloworldrui:AppViewModel"
        xmlns:reactiveui="http://reactiveui.net"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:helloworldrui="clr-namespace:HelloWorldRUI"
        xmlns:header="clr-namespace:HelloWorldRUI.Controls.Header"
        xmlns:controls="clr-namespace:HelloWorldRUI.Controls"
        xmlns:playingtrack="clr-namespace:HelloWorldRUI.Controls.PlayingTrack"
        Background="LightBlue"
        mc:Ignorable="d"
        Title="HelloWorld RUI" Width="450" Height="685">

    <StackPanel>
        <header:HeaderBlock Padding="10,2,10,2" x:Name="HeaderBlock" />

        <controls:NpcWorkSwitch />

        <playingtrack:PlayingTrackControl x:Name="PlayingTrackControl" Padding="30,0,30,0"/>

    </StackPanel>
</reactiveui:ReactiveWindow>
