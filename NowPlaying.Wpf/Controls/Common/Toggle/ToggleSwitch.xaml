<toggle:ToggleSwitchBase
    xmlns:toggle="clr-namespace:NowPlaying.Wpf.Controls.Common.Toggle"
    x:Class="NowPlaying.Wpf.Controls.Common.Toggle.ToggleSwitch"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" Width="150" Height="50">
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="150" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <!-- TODO: Animation -->

            <Rectangle RadiusX="20" RadiusY="20" Fill="Gray"/>
            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Center" Height="50" Width="50" />

        </Grid>
    </Grid>
</toggle:ToggleSwitchBase>
