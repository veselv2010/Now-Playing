<UserControl x:Class="NowPlaying.Wpf.Controls.NpcWorkSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NowPlaying.Wpf.Controls"
             xmlns:toggle="clr-namespace:NowPlaying.Wpf.Controls.Common.Toggle"
             mc:Ignorable="d"
             Height="100" Width="111">
    <StackPanel>
        <TextBlock Text="npc work" 
                   FontSize="24" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,5"/>
        
        <toggle:ToggleSwitch HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
