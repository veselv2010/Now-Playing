<UserControl x:Class="NowPlaying.Wpf.Controls.Header.Buttons.LineButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NowPlaying.Wpf.Controls.Header.Buttons"
             mc:Ignorable="d"
             Width="10" Height="10">
    <Rectangle x:Name="Line" 
               Width="10" Height="2" 
               Fill="#7E7E7E"
               VerticalAlignment="Bottom" 
               MouseEnter="LineButtonMouseEnter" 
               MouseLeave="LineButtonMouseLeave"/>
</UserControl>
